<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercise.classroom.luisTapia.MenuLuisActivity">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp"
        android:id="@+id/glMargenIzquierdo"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp"
        android:id="@+id/glMargenDerecho"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".3"

        android:id="@+id/glMargenCentro"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MenÃº Principal"
        app:layout_constraintStart_toEndOf="@+id/glMargenIzquierdo"
        app:layout_constraintEnd_toStartOf="@+id/glMargenDerecho"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="18sp"
        android:id="@+id/tvTitulo"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btEjercicio1"
        android:text="Ejercicio 1"
        app:layout_constraintTop_toBottomOf="@+id/glMargenCentro"
        app:layout_constraintStart_toEndOf="@+id/glMargenIzquierdo"
        app:layout_constraintEnd_toStartOf="@+id/glMargenDerecho"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicio 2"
        app:layout_constraintStart_toEndOf="@+id/glMargenIzquierdo"
        app:layout_constraintEnd_toStartOf="@+id/glMargenDerecho"
        app:layout_constraintTop_toBottomOf="@+id/btEjercicio1"
        android:layout_marginTop="10dp"
        android:id="@+id/btEjercicio2"
        />


    <Button
        android:layout_width="0dp"
        android:id="@+id/btnRegresarHomeScren"
        android:layout_height="wrap_content"
        android:text="Menu Principal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/glMargenIzquierdo"
        app:layout_constraintEnd_toStartOf="@id/glMargenDerecho"

        />

</androidx.constraintlayout.widget.ConstraintLayout>